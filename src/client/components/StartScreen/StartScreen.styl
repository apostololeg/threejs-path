.root
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  display flex
  flex-direction column
  align-items center
  justify-content center
  height 100vh
  width 100vw
  backdrop-filter blur(50px)
  transition .2s ease-out
  transition-property transform, opacity
  backface-visibility hiddent

.isStarted
  transform scale3d(1.5, 1.5, 1.5)
  pointer-events none
  opacity 0
